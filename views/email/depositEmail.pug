extends baseEmail

block content
  p Hello #{username},
  span Your deposit of
  span.bold #{depositedPrice} ETH
  span has been successfully completed.
  p
  p Please allow some time for the deposit to appear in your #{domainName} account. If you have any inquiries or need assistance, feel free to reach out to our support team.
  p We appreciate you choosing #{domainName}.
  p Warm regards, #{domainName} Team
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  p






